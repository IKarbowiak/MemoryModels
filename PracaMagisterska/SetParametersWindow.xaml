<Window x:Class="PracaMagisterska.SetParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracaMagisterska"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="SetParametersWindow" Height="600" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <TextBlock Grid.Row="0" Grid.Column="0" TextAlignment="Center" VerticalAlignment="Top" Margin="0 10,0,0" FontSize="30" Background="AliceBlue">Set parameters</TextBlock>
            <!--<Button Grid.Column="0" Grid.Row="1" Width="110" Height="20" Margin="10,0,0,0" HorizontalAlignment="Left" Click="writeParametersToXML">Save configuration</Button>-->
        </Grid>
        <!--<ComboBox x:Name="ModelComboBox" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" Margin="0,50,30,0" SelectionChanged="ModelComboBox_SelectionChanged">
            <ComboBoxItem Content="Model1" IsSelected="True"/>
            <ComboBoxItem Content="Model2"/>
            <ComboBoxItem Content="Model3"/>
        </ComboBox>-->
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Button x:Name="defaultConf" Margin="10,5" Click="defaultConf_Click">Click for default configuration</Button>
            <Button Click="writeParametersToXML" Margin="10,5">Save as a new configuration</Button>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button x:Name="updateDefault" Margin="10,5" Click="updateDefault_Click">Update default configuration</Button>
            <Button x:Name="loadButton" Margin="10,5" Click="loadButton_Click">Load configurtation</Button>
        </StackPanel>
        <!--<Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <StackPanel>
                
            </StackPanel>
            <WrapPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0">
                <Button Margin="0,10,10,10">Click for default configuration</Button>
                <Button  Margin="10,10,0,0">Update default configuration</Button>
                <Button Click="writeParametersToXML" Margin="10,10,10">Save as a new configuration</Button>
                <Button x:Name="loadButton" Margin="10,10,0,0" Click="loadButton_Click">Load configurtation</Button>
            </WrapPanel>
        </Grid>-->
        <TabControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <TabItem Header="General parameters">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="generalParamsGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40" Padding="0,10,0,0"><Run Text="Flow "/><Run Text="Δ" /><Run Text="V / "/><Run Text="Δ" /><Run Text="t"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40" Padding="0,10,0,0"><Run Text="Flow time [s]"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40" Padding="0,10,0,0"><Run Text="Draining speed "/><Run Text="Δ" /><Run Text="V / "/><Run Text="Δ" /><Run Text="t"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Block at the of flow end?"/></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" x:Name="generalParams">
                            <TextBox x:Name="flowBox" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="timeBox" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="drainingBox" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <ComboBox x:Name="blockFlow" Width="100" Height="20">
                                <ComboBoxItem x:Name="trueItem" Content="True"/>
                                <ComboBoxItem x:Name="falseItem" Content="False" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Model 1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="model1Grid" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" >
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Neuron length ["/><Run Text="μ" /><Run Text="m]:"/><LineBreak/><Run FontSize="9" Text="(length should be ...."/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Neuron diameter ["/><Run Text="μ" /><Run Text="m]"/><LineBreak/><Run FontSize="9" Text="(value should be between 0,3 and 0,5 "/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40" Padding="0,10,0,0"><Run Text="Neuron max speed"/></TextBlock>
                        </StackPanel >
                        <StackPanel x:Name="Model1_params" Grid.Column="1" >
                            <TextBox x:Name="neuLenBoxM1" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="neuDiamBoxM1" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="maxSpeedBoxM1" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Model 2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">

                    <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" >
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Dendrite length ["/><Run Text="μ" /><Run Text="m]:"/><LineBreak/><Run FontSize="9" Text="(length should be ...."/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Dendrite diameter ["/><Run Text="μ" /><Run Text="m]"/><LineBreak/><Run FontSize="9" Text="(value should be between 0,3 and 0,5 "/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Soma diameter ["/><Run Text="μ" /><Run Text="m]:"/><LineBreak/><Run FontSize="9" Text="(length should be ...."/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Axon diameter ["/><Run Text="μ" /><Run Text="m]"/><LineBreak/><Run FontSize="9" Text="(value should be between 0,3 and 0,5 "/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Axon length ["/><Run Text="μ" /><Run Text="m]:"/><LineBreak/><Run FontSize="9" Text="(length should be ...."/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40" Padding="0,10,0,0"><Run Text="Axon max speed"/></TextBlock>
                        </StackPanel>
                        <StackPanel x:Name="Model2_params" Grid.Column="1">
                            <TextBox x:Name="denLenBoxM2" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="denDiamBoxM2" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="somaDiamBoxM2" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="axonDiamM2" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="axonLenM2" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="maxSpeedBoxM2" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Model 3">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Margin="15,0,0,5" FontWeight="Bold" TextAlignment="Center">Dendrite 1</TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Dendrite 1 length ["/><Run Text="μ" /><Run Text="m]:"/><LineBreak/><Run FontSize="9" Text="(length should be ...."/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Dendrite 1 diameter ["/><Run Text="μ" /><Run Text="m]"/><LineBreak/><Run FontSize="9" Text="(value should be between 0,3 and 0,5 "/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock Margin="15,0,0,5" FontWeight="Bold" TextAlignment="Center">Dendrite 2</TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Dendrite 2 length ["/><Run Text="μ" /><Run Text="m]:"/><LineBreak/><Run FontSize="9" Text="(length should be ...."/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Dendrite 2 diameter ["/><Run Text="μ" /><Run Text="m]"/><LineBreak/><Run FontSize="9" Text="(value should be between 0,3 and 0,5 "/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock Margin="15,0,0,5" FontWeight="Bold" TextAlignment="Center">Soma</TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Soma diameter ["/><Run Text="μ" /><Run Text="m]:"/><LineBreak/><Run FontSize="9" Text="(length should be ...."/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock Margin="15,0,0,5" FontWeight="Bold" TextAlignment="Center">Axon</TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Axon diameter ["/><Run Text="μ" /><Run Text="m]"/><LineBreak/><Run FontSize="9" Text="(value should be between 0,3 and 0,5 "/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Axon length ["/><Run Text="μ" /><Run Text="m]:"/><LineBreak/><Run FontSize="9" Text="(length should be ...."/><Run FontSize="9" Text="μ"/><Run FontSize="9" Text="m)"/></TextBlock>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="40"><Run Text="Axon max speed"/></TextBlock>
                        </StackPanel>
                        <StackPanel x:Name="Model3_params" Grid.Column="1">
                            <TextBlock Margin="0,0,0,5"/>
                            <TextBox x:Name="den1LenBoxM3" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="den1DiamBoxM3" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBlock Margin="0,0,0,5"/>
                            <TextBox x:Name="den2LenBoxM3" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="den2DiamBoxM3" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBlock Margin="0,0,0,5"/>
                            <TextBox x:Name="somaDiamBoxM3" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBlock Margin="0,0,0,5"/>
                            <TextBox x:Name="axonDiamM3" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="axonLenM3" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                            <TextBox x:Name="maxSpeedBoxM3" VerticalAlignment="Center" TextAlignment="Center" Height="20" Width="50" Margin="0,10,0,10"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
